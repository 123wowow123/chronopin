'use strict';

export default function(sequelize, DataTypes) {
  return sequelize.define('Comment', {
    _id: {
      type: DataTypes.INTEGER,
      allowNull: false,
      primaryKey: true,
      autoIncrement: true
    },

    facebookCommentId: DataTypes.STRING(4000),

    userId: DataTypes.INTEGER,
    pinId: DataTypes.INTEGER
  }, {
    timestamps: true,
    createdAt: 'utcCreatedDateTime',
    updatedAt: 'utcUpdatedDateTime'
  });
}
